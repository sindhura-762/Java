import java.util.*;
public class compoundamount {
    //n-no of years,r-annual rate,q-interest,p-principle,a-amount
    public static void main(String args[]){
        double r,q,p,a;
        int t;
        for(int i = 0;i<=10;i++){
        System.out.println("Enter the Principal amount: ");
        Scanner sc = new Scanner(System.in);
        p=sc.nextFloat();
        System.out.println("Enter the timespan: ");
        Scanner sc1 = new Scanner(System.in);
        t=sc1.nextInt();
        System.out.println("Enter the interest rate : ");
        Scanner sc2=new Scanner(System.in);
        q=sc2.nextFloat();
        System.out.println("Enter the annual rate: ");
        Scanner sc3 = new Scanner(System.in);
        r=sc3.nextFloat();
        a=Math.pow(1+(r/q),t);
        System.out.println("The corresponding amount: "+a);
        }


    }
}
