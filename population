public class Population {
    public static void main (String args[]){
        float pop,pop_men,pop_women,tot_lit,lit_men,lit_women,illit_men,illit_women;
        // population calculation
        pop = 80000;
        pop_men = (52*pop)/100;
        pop_women = pop - pop_men;

        // literacy calculation
        tot_lit = (48*pop)/100;
        lit_men = (35*pop_men)/100;
        lit_women = tot_lit - lit_men;

        //illeteracy calculation
        illit_men = pop_men - lit_men;
        illit_women = pop_women - lit_women ;

        System.out.println("The Total population in town : "+pop);
        System.out.println("The population of men in town : "+pop_men);
        System.out.println("The population of women in town : "+pop_women);
        System.out.println("The total literacy in town : "+tot_lit);
        System.out.println("The no.of literate men in town : "+lit_men);
        System.out.println("The no.of literate women in town : "+lit_women);
        System.out.println("The no.of illeterate men in town : "+illit_men);
        System.out.println("The no.of illeterate women in town : "+illit_women);
    }
    
}
